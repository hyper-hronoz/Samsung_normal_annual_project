<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sign_up_view"
    android:layout_width="match_parent"
    android:background="@drawable/select_gender_gradient_boy"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activity_heading"
                style="@style/activity_heading"
                android:text="Sign up" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/login_registrate_background"
                android:orientation="vertical"
                android:padding="50dp">

                <TextView
                    android:id="@+id/textView3"
                    style="@style/input_label"
                    android:text="nickname" />

                <EditText
                    android:id="@+id/login_login"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="40dp"
                    android:ems="10"
                    android:inputType="text" />


                <TextView
                    android:id="@+id/textView4"
                    style="@style/input_label"
                    android:text="password" />

                <EditText
                    android:id="@+id/login_password"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="40dp"
                    android:ems="10"
                    android:inputType="textPassword" />


                <TextView
                    android:id="@+id/textView5"
                    style="@style/input_label"
                    android:layout_above="@+id/login_password"
                    android:text="password again" />

                <EditText
                    android:id="@+id/editText_password_again"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="50dp"
                    android:ems="10"
                    android:inputType="textPassword" />

                <Button
                    android:id="@+id/login_confirm"
                    style="@style/login_registrate_button"
                    android:layout_gravity="center"
                    android:background="@drawable/login_regirstrate_button_background_boy"
                    android:text="Confirm"
                    android:layout_marginBottom="25dp"
                    app:backgroundTint="#00FFFFFF"
                    app:backgroundTintMode="src_over" />

                <TextView
                    android:id="@+id/haveAccount"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Already have an account?" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>