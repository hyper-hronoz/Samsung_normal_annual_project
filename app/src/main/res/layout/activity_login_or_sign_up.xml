<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/select_gender_gradient_boy"
    android:layout_height="match_parent"
    tools:context=".LoginOrSignUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="50dp"
        >

        <TextView
            android:id="@+id/textView6"
            style="@style/activity_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="40dp"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/login_or_sign_up_login_button"
            style="@style/login_registrate_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gender_confirm_button_gradient"
            android:layout_marginBottom="30dp"
            android:text="Login"
            android:textColor="@color/black"
            app:backgroundTint="#00FFFFFF"
            app:backgroundTintMode="src_over"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/login_or_sign_up_sign_up_button"
            style="@style/gender_confirm_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_registrate_button_background_girl"
            android:text="Sign up"
            android:textColor="@color/white"
            app:backgroundTint="#00FFFFFF"
            app:backgroundTintMode="src_over"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_or_sign_up_login_button"
            tools:ignore="MissingConstraints" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>